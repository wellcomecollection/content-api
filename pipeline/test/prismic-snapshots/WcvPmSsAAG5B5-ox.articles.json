            {
              "type": "heading2",
              "text": "Take a look",
              "spans": []
            },
            {
              "type": "paragraph",
              "text": "",
              "spans": []
            }
          ]
        },
        "id": "text$c24c6604-f922-4d4e-a3a1-adc6223994ce",
        "slice_type": "text",
        "slice_label": null
      },
      {
        "variation": "default",
