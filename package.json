{
  "name": "@weco/content-api",
  "version": "0.1.0",
  "description": "APIs for Wellcome Collection content",
  "repository": "git@github.com:wellcomecollection/content-api.git",
  "author": "digital@wellcomecollection.org",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "common",
      "pipeline",
      "unpublisher",
      "webhook"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint \"**/*.{js,ts}\"",
    "tsc": "yarn workspaces run tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.6",
    "@eslint/js": "^10.0.1",
    "@tsconfig/node20": "20.1.9",
    "@tsconfig/node24": "24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^29.15.0",
    "eslint-plugin-jest-playwright": "^0.9.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^13.1.2",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.56.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --max-warnings=0 --report-unused-disable-directives",
      "prettier --write --ignore-unknown"
    ]
  }
}
