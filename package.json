{
  "name": "@weco/content-api",
  "version": "0.1.0",
  "description": "APIs for Wellcome Collection content",
  "repository": "git@github.com:wellcomecollection/content-api.git",
  "author": "digital@wellcomecollection.org",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "common",
      "pipeline",
      "unpublisher",
      "webhook"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint \"**/*.{js,ts}\"",
    "tsc": "yarn workspaces run tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.5",
    "@tsconfig/node20": "20.1.8",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "husky": "^9.1.7",
    "eslint": "^8.46.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jest-playwright": "^0.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-standard": "^5.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^3.7.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --max-warnings=0 --report-unused-disable-directives",
      "prettier --write --ignore-unknown"
    ]
  }
}
